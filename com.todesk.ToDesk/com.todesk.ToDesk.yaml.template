        dest-filename: todesk-amd64.deb
        url: https://üò°TODESK_DOMAINüò°/üò°TODESK_DIRüò°/todesk-v4.7.2.0-amd64.deb
        sha256: bfb5695d715568a23df51a735167c073a784ecd1c625e16b35e5136d5b97fb28
